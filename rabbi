<body>
    <header>
        <h1>Official Rabbinical Ordination Center</h1>
        <p>Become a Certified Rabbi in Minutes!</p>
    </header>
    <button id="start-button">Become a Rabbi</button>
    
    <div id="chat-container"></div>
    <div id="input-container">
        <input type="text" id="user-input" placeholder="Type your message...">
        <button id="send-button">Send</button>
    </div>
    
    <div id="certificate-container">
        <h2>Congratulations!</h2>
        <p>You are now officially a Rabbi.</p>
        <button id="download-button">Download Your Certificate</button>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script>
        const { jsPDF } = window.jspdf;
        
        const rabbis = [
            { name: "Rabbi Goldstein" },
            { name: "Rabbi Silverman" },
            { name: "Rabbi Cohenberg" }
        ];
        
        const questions = [
            "What's the Jewish word for 'hello' and 'peace'? (Hint: It starts with 'Sh' and ends with 'alom')",
            "How many days does Hanukkah last? (Hint: It's the same as the number of nights)",
            "What do Jews traditionally eat on Passover? (Hint: It's flat and crunchy)"
        ];
        
        let userName = "";
        let stage = 0; // 0: initial message, 1: name, 2-4: questions, 5: ordination
        
        const chatContainer = document.getElementById('chat-container');
        const inputContainer = document.getElementById('input-container');
        const userInput = document.getElementById('user-input');
        const sendButton = document.getElementById('send-button');
        const startButton = document.getElementById('start-button');
        const certificateContainer = document.getElementById('certificate-container');
        const downloadButton = document.getElementById('download-button');
        
        function appendMessage(text, className) {
            const msg = document.createElement('div');
            msg.classList.add('message', className);
            msg.textContent = text;
            chatContainer.appendChild(msg);
            chatContainer.scrollTop = chatContainer.scrollHeight;
        }
        
        function simulateJoin() {
            appendMessage("Starting Rabbinical Ordination Chat...", 'system');
            setTimeout(() => {
                rabbis.forEach((rabbi, index) => {
                    setTimeout(() => {
                        appendMessage(`${rabbi.name} has joined the chat.`, 'system');
                    }, index * 1000);
                });
                setTimeout(initiateChat, 3000);
            }, 1000);
        }
        
        function initiateChat() {
            appendMessage(`${rabbis[0].name}: Shalom! We're here to ordain you as a Rabbi.`, 'rabbi');
            userInput.value = "I want to become a rabbi";
            stage = 0;
            inputContainer.style.display = 'block';
            userInput.focus();
        }
        
        function handleUserMessage(message) {
            appendMessage(`You: ${message}`, 'user');
            userInput.value = "";
            if (stage === 0) {
                setTimeout(() => {
                    appendMessage(`${rabbis[0].name}: Wonderful! What is your name?`, 'rabbi');
                    stage = 1;
                }, 1000);
            } else if (stage === 1) {
                userName = message;
                setTimeout(() => {
                    appendMessage(`${rabbis[1].name}: Great to meet you, ${userName}! Now, a few easy questions to confirm.`, 'rabbi');
                    setTimeout(askQuestion, 1000);
                }, 1000);
            } else if (stage >= 2 && stage <= 4) {
                setTimeout(() => {
                    appendMessage(`${rabbis[stage - 2].name}: Correct! Well done.`, 'rabbi');
                    if (stage < 4) {
                        setTimeout(askQuestion, 1000);
                    } else {
                        setTimeout(ordain, 1000);
                    }
                }, 1000);
            }
        }
        
        function askQuestion() {
            const qIndex = stage - 2;
            appendMessage(`${rabbis[qIndex].name}: Question ${qIndex + 1}: ${questions[qIndex]}`, 'rabbi');
            stage++;
        }
        
        function ordain() {
            stage = 5;
            rabbis.forEach((rabbi, index) => {
                setTimeout(() => {
                    appendMessage(`${rabbi.name}: I now pronounce ${userName} a Rabbi! Mazel tov!`, 'rabbi');
                }, index * 1000);
            });
            setTimeout(() => {
                inputContainer.style.display = 'none';
                certificateContainer.style.display = 'block';
            }, 3000);
        }
        
        function downloadCertificate() {
            const doc = new jsPDF();
            doc.setFontSize(22);
            doc.text("Certificate of Rabbinical Ordination", 105, 40, { align: 'center' });
            doc.setFontSize(16);
            doc.text(`This certifies that ${userName}`, 105, 80, { align: 'center' });
            doc.text("has been ordained as a Rabbi", 105, 95, { align: 'center' });
            doc.text("by the Official Rabbinical Ordination Center.", 105, 110, { align: 'center' });
            doc.setFontSize(12);
            doc.text("Signed:", 105, 140, { align: 'center' });
            rabbis.forEach((rabbi, index) => {
                doc.text(rabbi.name, 105, 150 + index * 10, { align: 'center' });
            });
            doc.save(`${userName}_Rabbi_Certificate.pdf`);
        }
        
        startButton.addEventListener('click', () => {
            startButton.style.display = 'none';
            chatContainer.style.display = 'block';
            simulateJoin();
        });
        
        sendButton.addEventListener('click', () => {
            const message = userInput.value.trim();
            if (message && stage < 5) {
                handleUserMessage(message);
            }
        });
        
        userInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                sendButton.click();
            }
        });
        
        downloadButton.addEventListener('click', downloadCertificate);
    </script>
</body>
</html>
